<Window x:Class="LoginView.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoginView"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Visibility="Visible">
            <Grid  HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Button  Grid.Row="1"  Content="Login" Width="100" Height="30" Click="LoginButton_Click"/>
                <TextBox Grid.Row="0" Width="200" Height="50" x:Name="StatusTextBlock" Margin="0,50,0,0" FontSize="16" Background="Aqua"/>
            </Grid>
        </StackPanel>
        


    </Grid>
</Window>
